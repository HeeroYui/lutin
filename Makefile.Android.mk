	$(Q)mkdir -p $(FINAL_FOLDER_JAVA_PROJECT)/


$(FINAL_FILE_ABSTRACTION) : $(EWOL_FOLDER)/Java/PROJECT_NAME.java $(CONFIG_GLOBAL_FILE)
